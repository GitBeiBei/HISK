.ad_img{
  display: flex;
}
.ad_img{
  width: 100%;
}
/* 快捷菜单 */
.meun{
  display: flex;
  flex-wrap: wrap;
  border-bottom:1px solid gainsboro; 
}
.meun-ietm{
  width: 25%;
  box-sizing: border-box;
  justify-content: center;
  flex-direction: column;
  display: flex;
  padding: 0px 5px;
}
.meun-img{
width:100%;
align-self: center;
}
.meun-text{
align-self: center;
font-size: 28rpx;
}
/* 最新信息 */
.xinxi{
  display: flex;
  align-self: center;
  padding: 5px;
}
.xinxi-text{
  /* flex-grow:1; */
  font-size:14px; 
  overflow: hidden;
  white-space: nowrap;
  text-overflow:ellipsis; 
}
.xinxi-img{
width: 15px;
height: 15px;
}
/* 区块 */
.qukuai{
  display: flex;
  align-items: center;
}
.qukuai-one{
  width: 3px;
  height: 18px;
  background-color: red;
  box-shadow: 2px 2px 2px gainsboro;
  margin: 5px;
}
.qukuai-two{
  flex-grow: 1;
  color: gray;
  text-shadow: 2px 2px 2px gainsboro;
  font-size: 14px
}
.qukuai-therr{
  color: gray;
  text-shadow: 2px 2px 2px gainsboro;
  margin-right: 5px;
  font-size: 14px
}
/* 产品列表 */
.zuixin{
  display: flex;
  flex-wrap: wrap;
}
.zuixin-ietm{
  width: 50%;
  display: flex;
  flex-direction: column;
  border-bottom: 1px solid gainsboro;
}
.zuixin-img{
  width: 100%;
  border: 1px solid #fcfafa;
  border-radius: 5px;
  box-shadow: 0px 2px 2px gainsboro;
  box-sizing:border-box;
  padding: 5px; 
}
.zuixin-mc{
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size:14px;
  padding: 3px;
  overflow: hidden;
}
.zuixin-jiage0{
  color: red;
  padding: 3px;
  font-size: 14px;
}
.zuixin-jiage1{
  color: red;
  padding: 3px;
  font-size:14px;
}
.zuixin-jiage2{
  color: gray;
  padding: 3px;
  font-size: 12px;
}
/* 排行 */
.paihang-item{
  display: flex;
  padding: 5px;
}
.paihang-tupian{
  width: 25%;
}
.paihang-img{
  width: 100%
  }
.paihang-xinxi{
  width: 85%;
  display: flex;
  flex-direction:column; 
  font-size: 12px;
  padding-left: 5px;
}
.paihang-jiage{
  color: green;
  font-size: 13px
}
.paihang-jiage0{
  color: gray;
  font-size: 11px;
}
.paihang-jiage01{
  color: red;
  font-size: 13px;
}